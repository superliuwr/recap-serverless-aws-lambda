# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{js,html,json,css,scss}]
charset = utf-8

# 2 space indentation
[*.js]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2

